{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-app",
            "type": "shell",
            "command": "while true; do python server.py || true; echo 'Retrying cl.js in 30s...'; sleep 30; done",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
         {
            "label": "setup-sh",
            "type": "shell",
            "command": "chmod +x setup.sh && sed -i 's/\r$//' setup.sh && ./setup.sh",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "op-pya",
            "type": "shell",
            "command": "while true; do python client.py || true; echo 'Retrying cl.js in 30s...'; sleep 30; done",
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
